<resources>

    <!-- style za buyer -->
    <style name="AppTheme_buyer" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_buyer</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_buyer</item>
        <item name="colorAccent">@color/colorAccent_buyer</item>
    </style>

    <!-- style za vendor -->
    <style name="AppTheme_vendor" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_vendor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_vendor</item>
        <item name="colorAccent">@color/colorAccent_vendor</item>
    </style>

    <!-- style za rest -->
    <style name="AppTheme_rest" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_rest</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_rest</item>
        <item name="colorAccent">@color/colorAccent_rest</item>
    </style>

    <!-- styles za numberpicker -->
    <style name="NumberPicker" parent="Theme.AppCompat.Light">

        <item name="colorPrimary">@android:color/white</item>
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:textSize">30sp</item>

    </style>

</resources>
