<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vendor.VendorSelect">


    <include
        android:id="@+id/vendor_appBar_select"
        layout="@layout/vendor_app_bar_layout" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/vendor_appBar_select"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_credit_card_black_24dp" />

    <TextView
        android:id="@+id/vendor_message"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="20dp"
        android:padding="35dp"
        android:text="This is the vendor side...We make sales and delivery"
        android:textAlignment="center"
        android:textColor="#04010C"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_VendorRegister"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vendor_message"
        android:layout_marginStart="50dp"
        android:layout_marginTop="120dp"
        android:background="@xml/button_background_green"
        android:text="REGISTER" />

    <Button
        android:id="@+id/btn_VendorLogin"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vendor_message"
        android:layout_alignRight="@+id/btn_VendorRegister"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="30dp"
        android:layout_toEndOf="@+id/btn_BuyerRegister"
        android:background="@xml/button_background"
        android:text="LOGIN" />

    <TextView
        android:id="@+id/vendor_textViewShifter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:text="shift to buyer"
        android:textAlignment="center"
        android:textColor="@color/info_description_color" />

</RelativeLayout>